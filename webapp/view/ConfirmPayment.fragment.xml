<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="confirmPaymentDialog"
        title="Review Payment"
        contentWidth="400px"
        class="sapUiSmallMargin">
        <content>
            <VBox id="confirmPaymentVBox" class="sapUiSmallMargin" alignItems="Center">
                <!-- Fee Description Header -->
                <VBox id="feeHeaderVBox" alignItems="Center" class="sapUiMediumMarginBottom">
                    <Label 
                        id="paymentForLabel"
                        text="Payment For" 
                        design="Bold" 
                        class="sapUiTinyMarginBottom"/>
                    <Title 
                        id="feeTypeTitle"
                        text="{confirmData>/feeType}" 
                        titleStyle="H3" 
                        class="sapUiSmallMarginBottom"/>
                    <Text 
                        id="feeDescriptionText"
                        text="{confirmData>/description}" 
                        class="sapUiTinyMarginBottom"/>
                </VBox>

                <!-- The Big Amount -->
                <ObjectNumber
                    id="confirmAmountNumber"
                    number="{confirmData>/amount}"
                    unit="{confirmData>/currency}"
                    emphasized="true"
                    state="None"
                    class="sapMObjectNumberLarge sapUiMediumMarginBottom"/>

                <!-- Due Date Info -->
                <HBox id="dueDateHBox" class="sapUiSmallMarginBottom">
                    <Label id="dueDateLabelText" text="Due Date: " class="sapUiTinyMarginEnd"/>
                    <Text id="dueDateValueText" text="{confirmData>/dueDate}"/>
                </HBox>

                <!-- Payment Method -->
                <List 
                    id="paymentMethodList"
                    showSeparators="None" 
                    width="100%" 
                    class="sapUiSmallMarginBottom">
                    <StandardListItem
                        id="paymentMethodItem"
                        title="Payment Method"
                        description="{confirmData>/paymentMethod}"
                        icon="{confirmData>/paymentMethodIcon}"
                        type="Inactive"/>
                </List>

                <!-- Information Message -->
                <MessageStrip
                    id="confirmPaymentInfoStrip"
                    text="Processing this payment will deduct funds immediately."
                    type="Information"
                    showIcon="true"
                    class="sapUiSmallMarginTop"/>
            </VBox>
        </content>
        <buttons>
            <Button
                id="confirmPaymentBtn"
                text="Confirm &amp; Pay"
                type="Emphasized"
                icon="sap-icon://accept"
                press="onConfirmPaymentAction"/>
            <Button
                id="cancelConfirmBtn"
                text="Cancel"
                type="Transparent"
                press="onCloseConfirmDialog"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
