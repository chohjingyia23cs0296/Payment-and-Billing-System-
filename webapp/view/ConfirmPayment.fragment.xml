<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="confirmPaymentDialog"
        title="Review Payment"
        contentWidth="400px"
        class="sapUiSmallMargin">
        <content>
            <VBox class="sapUiSmallMargin" alignItems="Center">
                <!-- Fee Description Header -->
                <VBox alignItems="Center" class="sapUiMediumMarginBottom">
                    <Label 
                        text="Payment For" 
                        design="Bold" 
                        class="sapUiTinyMarginBottom"/>
                    <Title 
                        text="{confirmData>/feeType}" 
                        titleStyle="H3" 
                        class="sapUiSmallMarginBottom"/>
                    <Text 
                        text="{confirmData>/description}" 
                        class="sapUiTinyMarginBottom"/>
                </VBox>

                <!-- The Big Amount -->
                <ObjectNumber
                    number="{confirmData>/amount}"
                    unit="{confirmData>/currency}"
                    emphasized="true"
                    state="None"
                    class="sapMObjectNumberLarge sapUiMediumMarginBottom"
                    style="font-size: 3rem; font-weight: 700;"/>

                <!-- Due Date Info -->
                <HBox class="sapUiSmallMarginBottom">
                    <Label text="Due Date: " class="sapUiTinyMarginEnd"/>
                    <Text text="{confirmData>/dueDate}"/>
                </HBox>

                <!-- Payment Method -->
                <List 
                    showSeparators="None" 
                    width="100%" 
                    class="sapUiSmallMarginBottom">
                    <StandardListItem
                        title="Payment Method"
                        description="{confirmData>/paymentMethod}"
                        icon="{confirmData>/paymentMethodIcon}"
                        type="Inactive"/>
                </List>

                <!-- Information Message -->
                <MessageStrip
                    text="Processing this payment will deduct funds immediately."
                    type="Information"
                    showIcon="true"
                    class="sapUiSmallMarginTop"/>
            </VBox>
        </content>
        <buttons>
            <Button
                text="Confirm &amp; Pay"
                type="Emphasized"
                icon="sap-icon://accept"
                press="onConfirmPaymentAction"/>
            <Button
                text="Cancel"
                type="Transparent"
                press="onCloseConfirmDialog"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
