<mvc:View
	controllerName="paymentprototype.controller.payment_prototype"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	displayBlock="true">
	<Page id="paymentPrototypePage" showHeader="false">
		<customHeader>
			<Bar id="headerBar" class="customHeaderBar">
				<contentLeft>
					<Text id="welcomeText" text="Welcome, Jing Yi"/>
				</contentLeft>
				<contentRight>
					<Icon id="userIcon" src="sap-icon://person-placeholder" size="1.75rem" color="#ffffff"/>
				</contentRight>
			</Bar>
		</customHeader>

		<content>
			<ScrollContainer id="mainScroll" height="100%" width="100%" vertical="true">
				<VBox id="mainContent">
					
					<!-- Outstanding Balance Hero Card -->
					<VBox id="heroVBox" class="heroCard">
						<Text id="balanceLabel" class="outstandingLabel" text="Total Outstanding"/>
						<Text id="balanceAmount" class="outstandingAmount" text="RM 550.00"/>
						<Button id="payAllBtn" class="payAllButton" text="Pay All" press=".onPayAll" type="Emphasized"/>
					</VBox>

					<!-- Status Stats -->
					<HBox id="statsHBox" class="statsContainer">
						<VBox id="paidStatBox" class="statCard">
							<Text id="paidStatNumber" class="statNumber" text="4"/>
							<Text id="paidStatLabel" class="statLabel" text="Paid"/>
						</VBox>
						<VBox id="pendingStatBox" class="statCard">
							<Text id="pendingStatNumber" class="statNumber" text="2"/>
							<Text id="pendingStatLabel" class="statLabel" text="Pending"/>
						</VBox>
						<VBox id="overdueStatBox" class="statCard">
							<Text id="overdueStatNumber" class="statNumber" text="1"/>
							<Text id="overdueStatLabel" class="statLabel" text="Overdue"/>
						</VBox>
					</HBox>

					<!-- Due Payment Reminders -->
					<Title id="remindersTitle" class="sectionTitle" text="Due Payment Reminders" level="H3"/>
					<VBox id="remindersContainer">
						<HBox id="reminder1" class="reminderItem warning">
							<VBox id="reminder1Details">
								<Text id="reminder1Title" class="reminderTitle" text="Monthly Fee (February)"/>
								<Text id="reminder1Date" class="reminderDate" text="Due: 2026-02-01"/>
							</VBox>
							<Text id="reminder1Amount" class="reminderAmount" text="RM 300.00"/>
						</HBox>
						<HBox id="reminder2" class="reminderItem info">
							<VBox id="reminder2Details">
								<Text id="reminder2Title" class="reminderTitle" text="Utilities"/>
								<Text id="reminder2Date" class="reminderDate" text="Due: 2026-02-10"/>
							</VBox>
							<Text id="reminder2Amount" class="reminderAmount" text="RM 200.00"/>
						</HBox>
						<HBox id="reminder3" class="reminderItem error">
							<VBox id="reminder3Details">
								<Text id="reminder3Title" class="reminderTitle" text="Monthly Fee (January) - OVERDUE"/>
								<Text id="reminder3Date" class="reminderDate" text="Was Due: 2026-01-05"/>
							</VBox>
							<Text id="reminder3Amount" class="reminderAmount" text="RM 300.00"/>
						</HBox>
					</VBox>

					<!-- Hostel Fee Records -->
					<Title id="feeRecordsTitle" class="sectionTitle" text="Hostel Fee Records" level="H3"/>
					
					<!-- Fee Cards -->
					<VBox id="feeCardsContainer">
						<!-- Fee Card 1: Deposit (Paid) -->
						<HBox id="feeCard1" class="billCardContainer">
							<core:Icon id="depositIcon" src="sap-icon://money-bills" class="billIconContainer type-deposit" size="2rem"/>
							<VBox id="feeDetails1" class="billDetailsContainer">
								<Text id="feeTitle1" class="billTitle" text="Deposit"/>
								<Text id="feeDueDate1" class="billDueDate" text="Due: 2025-12-15"/>
							</VBox>
							<VBox id="feeAmount1" class="billAmountStatus">
								<Text id="feeAmount1Text" class="billAmount" text="RM 500.00"/>
								<Text id="feeStatus1" class="billStatus status-paid" text="Paid"/>
							</VBox>
							<Button id="feeAction1" class="billActionButton" text="Receipt" press=".onGenerateReceipt"/>
						</HBox>

						<!-- Fee Card 2: Semester Fee (Paid) -->
						<HBox id="feeCard2" class="billCardContainer">
							<core:Icon id="semesterIcon" src="sap-icon://study-leave" class="billIconContainer type-semester" size="2rem"/>
							<VBox id="feeDetails2" class="billDetailsContainer">
								<Text id="feeTitle2" class="billTitle" text="Semester Fee 2025/2026"/>
								<Text id="feeDueDate2" class="billDueDate" text="Due: 2026-01-15"/>
							</VBox>
							<VBox id="feeAmount2" class="billAmountStatus">
								<Text id="feeAmount2Text" class="billAmount" text="RM 1,200.00"/>
								<Text id="feeStatus2" class="billStatus status-paid" text="Paid"/>
							</VBox>
							<Button id="feeAction2" class="billActionButton" text="Receipt" press=".onGenerateReceipt"/>
						</HBox>

						<!-- Fee Card 3: Monthly Fee (Pending) -->
						<HBox id="feeCard3" class="billCardContainer">
							<core:Icon id="monthlyIcon" src="sap-icon://calendar" class="billIconContainer type-monthly" size="2rem"/>
							<VBox id="feeDetails3" class="billDetailsContainer">
								<Text id="feeTitle3" class="billTitle" text="Monthly Fee - February"/>
								<Text id="feeDueDate3" class="billDueDate" text="Due: 2026-02-01"/>
							</VBox>
							<VBox id="feeAmount3" class="billAmountStatus">
								<Text id="feeAmount3Text" class="billAmount" text="RM 300.00"/>
								<Text id="feeStatus3" class="billStatus status-pending" text="Pending"/>
							</VBox>
							<Button id="feeAction3" class="billActionButton" text="Pay" type="Emphasized" press=".onPayFee"/>
						</HBox>

						<!-- Fee Card 4: Monthly Fee (Overdue) -->
						<HBox id="feeCard4" class="billCardContainer">
							<core:Icon id="overdueIcon" src="sap-icon://alert" class="billIconContainer type-utilities" size="2rem"/>
							<VBox id="feeDetails4" class="billDetailsContainer">
								<Text id="feeTitle4" class="billTitle" text="Monthly Fee - January (OVERDUE)"/>
								<Text id="feeDueDate4" class="billDueDate" text="Was Due: 2026-01-05"/>
							</VBox>
							<VBox id="feeAmount4" class="billAmountStatus">
								<Text id="feeAmount4Text" class="billAmount" text="RM 300.00"/>
								<Text id="feeStatus4" class="billStatus status-overdue" text="Overdue"/>
							</VBox>
							<Button id="feeAction4" class="billActionButton" text="Pay Now" type="Emphasized" press=".onPayFee"/>
						</HBox>

						<!-- Fee Card 5: Utilities (Pending) -->
						<HBox id="feeCard5" class="billCardContainer">
							<core:Icon id="utilitiesIcon" src="sap-icon://lightbulb" class="billIconContainer type-utilities" size="2rem"/>
							<VBox id="feeDetails5" class="billDetailsContainer">
								<Text id="feeTitle5" class="billTitle" text="Utilities"/>
								<Text id="feeDueDate5" class="billDueDate" text="Due: 2026-02-10"/>
							</VBox>
							<VBox id="feeAmount5" class="billAmountStatus">
								<Text id="feeAmount5Text" class="billAmount" text="RM 200.00"/>
								<Text id="feeStatus5" class="billStatus status-pending" text="Pending"/>
							</VBox>
							<Button id="feeAction5" class="billActionButton" text="Pay" type="Emphasized" press=".onPayFee"/>
						</HBox>

						<!-- Fee Card 6: Semester Fee (Pending) -->
						<HBox id="feeCard6" class="billCardContainer">
							<core:Icon id="semesterIcon2" src="sap-icon://study-leave" class="billIconContainer type-semester" size="2rem"/>
							<VBox id="feeDetails6" class="billDetailsContainer">
								<Text id="feeTitle6" class="billTitle" text="Semester Fee 2026/2027"/>
								<Text id="feeDueDate6" class="billDueDate" text="Due: 2026-07-15"/>
							</VBox>
							<VBox id="feeAmount6" class="billAmountStatus">
								<Text id="feeAmount6Text" class="billAmount" text="RM 1,200.00"/>
								<Text id="feeStatus6" class="billStatus status-pending" text="Pending"/>
							</VBox>
							<Button id="feeAction6" class="billActionButton" text="Pay" type="Emphasized" press=".onPayFee"/>
						</HBox>
					</VBox>

					<!-- Payment Methods -->
					<Title id="paymentMethodsTitle" class="sectionTitle" text="Payment Methods" level="H3"/>
					<HBox id="paymentButtonsBox" justifyContent="Center" wrap="Wrap" class="sapUiMediumMargin">
						<Button id="bankTransferBtn" text="Bank Transfer" icon="sap-icon://money-bills" press=".onBankTransfer" type="Emphasized" class="sapUiTinyMarginEnd"/>
						<Button id="eWalletBtn" text="E-Wallet" icon="sap-icon://wallet" press=".onEWallet" type="Emphasized" class="sapUiTinyMarginEnd"/>
						<Button id="creditCardBtn" text="Credit Card" icon="sap-icon://payment-cards" press=".onCreditCard" type="Emphasized"/>
					</HBox>

					<!-- Spacing -->
					<VBox class="sapUiLargeMarginBottom"/>
				</VBox>
			</ScrollContainer>
		</content>
	</Page>
</mvc:View>