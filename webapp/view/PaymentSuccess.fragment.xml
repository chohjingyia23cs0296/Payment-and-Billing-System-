<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="paymentSuccessDialog"
        showHeader="false"
        contentWidth="400px"
        class="sapUiSmallMargin">
        <content>
            <VBox alignItems="Center" justifyContent="Center" class="sapUiMediumMargin">
                <!-- Success Icon with Confetti Animation -->
                <core:Icon
                    src="sap-icon://sys-enter-2"
                    size="5rem"
                    color="#2e7d32"
                    class="sapUiSmallMarginBottom successIconBounce"/>
                
                <!-- Title -->
                <Title
                    text="Payment Successful!"
                    titleStyle="H2"
                    class="sapUiSmallMarginBottom"/>
                
                <!-- Amount Display -->
                <ObjectNumber
                    number="{successData>/amount}"
                    unit="{successData>/currency}"
                    emphasized="true"
                    state="Success"
                    class="sapUiMediumMarginBottom"
                    style="font-size: 2.5rem;"/>
                
                <!-- Transaction Details -->
                <VBox alignItems="Center" class="sapUiSmallMarginBottom">
                    <Text
                        text="Transaction ID: {successData>/receiptId}"
                        class="sapUiTinyMarginBottom"/>
                    <Text
                        text="Date: {successData>/paidDate}"
                        class="sapUiTinyMarginBottom"/>
                </VBox>
            </VBox>
        </content>
        <buttons>
            <Button
                text="Download Receipt"
                icon="sap-icon://download"
                type="Emphasized"
                press="onDownloadAfterSuccess"/>
            <Button
                text="Done"
                type="Transparent"
                press="onCloseSuccessDialog"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
