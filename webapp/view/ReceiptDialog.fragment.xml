<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form">
	<Dialog
		id="receiptDialog"
		contentWidth="500px"
		contentHeight="auto">
		<customHeader>
			<Bar id="receiptDialogBar">
				<contentMiddle>
					<Title id="receiptDialogTitle" text="Payment Receipt" level="H3"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<!-- Success Banner -->
			<MessageStrip
				id="receiptSuccessStrip"
				type="Success"
				showIcon="true"
				text="Payment Completed Successfully"
				class="sapUiSmallMarginBottom"/>

			<!-- Amount Section -->
			<VBox id="receiptAmountBox" alignItems="Center" class="sapUiMediumMarginTop sapUiMediumMarginBottom">
				<Title 
					id="receiptAmountTitle"
					text="{receiptData>/currency} {receiptData>/amount}"
					titleStyle="H1"
					class="sapUiSmallMarginTop sapMObjectNumberLarge"/>
				<Text 
					id="receiptPaymentMethodText"
					text="Paid via {receiptData>/paymentMethod}"
					class="sapUiTinyMarginTop sapUiTinyMarginBottom"/>
			</VBox>

			<!-- Receipt Details -->
			<form:SimpleForm
				id="receiptDetailsForm"
				editable="false"
				layout="ResponsiveGridLayout"
				class="sapUiSmallMarginBegin sapUiSmallMarginEnd">
				<form:content>
					<Label id="receiptIdLabel" text="Receipt ID"/>
					<Text id="receiptIdText" text="{receiptData>/receiptId}"/>
					
					<Label id="receiptDateLabel" text="Date"/>
					<Text id="receiptDateText" text="{receiptData>/paidDate}"/>
					
					<Label id="receiptStudentLabel" text="Student Name"/>
					<Text id="receiptStudentText" text="{receiptData>/studentName}"/>
					
					<Label id="receiptFeeLabel" text="Fee Description"/>
					<Text id="receiptFeeText" text="{receiptData>/feeType}"/>
					
					<Label id="receiptDetailsLabel" text="Details"/>
					<Text id="receiptDetailsText" text="{receiptData>/description}"/>
				</form:content>
			</form:SimpleForm>
		</content>
		<buttons>
			<Button 
				id="receiptDownloadBtn"
				text="Download PDF" 
				icon="sap-icon://pdf-attachment" 
				type="Emphasized" 
				press=".onDownloadPdf"/>
			<Button 
				id="receiptCloseBtn"
				text="Close" 
				type="Transparent" 
				press=".onCloseReceiptDialog"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>
